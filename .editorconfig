# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

# 4 space indentation
[*.{yaml}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{sum, sql}]
indent_style = space
indent_size = 4

# 4 tab indentation
[*.{go}]
indent_style = tab
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
